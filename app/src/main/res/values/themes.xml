        <item name="colorPrimary">@color/hot_pink</item>
        <item name="colorPrimaryVariant">@color/deep_pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_pink</item>
        <item name="colorSecondaryVariant">@color/medium_violet_red</item>
